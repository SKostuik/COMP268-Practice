import java.util.Scanner;

public class DozenExercise {

	public static void main(String[] args) {

		Scanner stdin = new Scanner ( System.in );

		int eggs;
		int dozen;
		int remain;
		int gross;
		int grossRemain;

		System.out.println();					//ln for style
		System.out.println("Greetings, how many eggs do you have?");

		eggs = stdin.nextInt();
		gross = eggs / 144;						//Calculate the gross
		grossRemain = eggs % 144;				//Calculate the remainder of the gross
		dozen = grossRemain / 12;				//Divide the remainder of the gross to find the dozens
		remain = dozen % 12;					//Calcuate the remainder of the dozen
		

		System.out.println();					//ln for style
		System.out.println("You have " + gross + " gross, " + dozen + " dozen, and " + remain + " eggs!" );
		System.out.println();					//ln for style


	}
}

//Program compiled and ran successfully.
